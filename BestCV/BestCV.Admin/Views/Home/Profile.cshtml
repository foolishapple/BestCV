
@{
    ViewBag.Title = "Thông tin cá nhân";
}

<!--begin::Toolbar-->
<div id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 ">
    <!--begin::Toolbar container-->
    <div id="kt_app_toolbar_container" class="app-container  d-flex flex-stack ">
        <!--begin::Page title-->
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
            <!--begin::Title-->
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
                Thông tin cá nhân
            </h1>
            <!--end::Title-->
            <!--begin::Breadcrumb-->
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    <a href="/" class="text-muted text-hover-primary">
                        Trang chủ
                    </a>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    Thông tin cá nhân
                </li>
                <!--end::Item-->
            </ul>
            <!--end::Breadcrumb-->
        </div>
        <!--end::Page title-->
    </div>
    <!--end::Toolbar container-->
</div>
<!--end::Toolbar-->
<!--begin::Content-->
<div id="kt_app_content" class="app-content  flex-column-fluid ">
    <!--begin::Content container-->
    <div id="kt_app_content_container" class="app-container  ">
        <!--begin::Navbar-->
        <div class="card mb-5 mb-xl-10">
            <div class="card-body pt-9 pb-0">
                <!--begin::Details-->
                <div class="d-flex flex-wrap flex-sm-nowrap">
                    <!--begin: Pic-->
                    <div class="me-7 mb-4">
                        <div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative">
                            <img src="~/assets/media/images/avatar1.png" class="user_info_photo" file-accept="image/*" file-path="" alt="image" id="adminAccountPhoto">
                            <div class="position-absolute translate-middle top-0 start-100 mb-6 btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow choseFile" data-fm-target="#adminAccountPhoto">
                                <i class="ki-duotone ki-pencil fs-7">
                                    <span class="path1 ki-uniEDBC"></span>
                                    <span class="path2 ki-uniEDBD"></span>
                                </i>
                            </div>
                        </div>
                    </div>
                    <!--end::Pic-->
                    <!--begin::Info-->
                    <div class="flex-grow-1">
                        <!--begin::Title-->
                        <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                            <!--begin::User-->
                            <div class="d-flex flex-column">
                                <!--begin::Name-->
                                <div class="d-flex align-items-center mb-2">
                                    <span href="#" class="text-gray-900 text-hover-primary fs-2 fw-bold me-1 user_info_fullName"></span><span class="user_info_role"></span>
                                </div>
                                <!--end::Name-->
                                <!--begin::Info-->
                                <div class="d-flex flex-wrap fw-semibold fs-6 mt-2 mb-2 pe-2">
                                    <span href="#" class="d-flex align-items-center text-gray-400 text-hover-primary me-5 mb-2">
                                        <i class="ki-duotone ki-phone fs-4 me-1"><span class="path1 ki-uniEDC5"></span><span class="path2 ki-uniEDC6"></span></i>                                <span class="user_info_phone"></span>
                                    </span>
                                </div>
                                <!--end::Info-->
                                <!--begin::Info-->
                                <div class="d-flex flex-wrap fw-semibold fs-6 mb-4 pe-2">
                                    <span href="#" class="d-flex align-items-center text-gray-400 text-hover-primary mb-2">
                                        <i class="ki-duotone ki-sms fs-4"><span class="path1 ki-uniEE86"></span><span class="path2 ki-uniEE87"></span></i>                                <span class="user_info_email"></span>
                                    </span>
                                </div>
                                <!--end::Info-->
                            </div>
                            <!--end::User-->
                        </div>
                        <!--end::Title-->
                    </div>
                    <!--end::Info-->
                </div>
                <!--end::Details-->
                <!--begin::Navs-->
                <ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bold">
                    <li class="nav-item mt-2">
                        <a class="nav-link active  text-active-primary ms-0 me-10 py-5" data-bs-toggle="tab" href="#kt_tab_pane_1">Thông tin chung</a>
                    </li>
                    <li class="nav-item mt-2">
                        <a class="nav-link nav-link text-active-primary ms-0 me-10 py-5" data-bs-toggle="tab" href="#kt_tab_pane_2">Đổi mật khẩu</a>
                    </li>
                </ul>
                <!--begin::Navs-->
            </div>
        </div>
        <!--end::Navbar-->
        <!--begin::details View-->
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="kt_tab_pane_1" role="tabpanel">
                <div class="card mb-5 mb-xl-10" id="kt_profile_details_view">
                    <!--begin::Card header-->
                    <div class="card-header cursor-pointer">
                        <!--begin::Card title-->
                        <div class="card-title m-0">
                            <h3 class="fw-bold m-0">Thông tin chung</h3>
                        </div>
                        <!--end::Card title-->
                        <!--begin::Action-->
                        <button class="btn btn-sm btn-primary align-self-center" id="btn_edit_profile">
                            <i class="di-duotone di-pencil"><span class="path1"></span><span class="path2"></span></i>Chỉnh sửa
                        </button>
                        <!--end::Action-->
                    </div>
                    <!--begin::Card header-->
                    <!--begin::Card body-->
                    <div class="card-body p-9">
                        <!--begin::Row-->
                        <div class="row mb-7">
                            <!--begin::Label-->
                            <label class="col-lg-2 fw-semibold text-muted">Họ và tên</label>
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-10">
                                <span class="fw-bold fs-6 text-gray-800 user_info_fullName"></span>
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--end::Row-->
                        <!--begin::Input group-->
                        <div class="row mb-7">
                            <!--begin::Label-->
                            <label class="col-lg-2 fw-semibold text-muted">Email</label>
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8 fv-row">
                                <span class="fw-semibold text-gray-800 fs-6 user_info_email"></span>
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="row mb-7">
                            <!--begin::Label-->
                            <label class="col-lg-2 fw-semibold text-muted">
                                Số điện thoại
                            </label>
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8 d-flex align-items-center">
                                <span class="fw-bold fs-6 text-gray-800 me-2 user_info_phone"></span>
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="row mb-7">
                            <!--begin::Label-->
                            <label class="col-lg-2 fw-semibold text-muted">
                                Ghi chú
                            </label>
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-10">
                                <span class="fw-bold fs-6 text-gray-800 user_info_description"></span>
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--end::Input group-->
                    </div>
                    <!--end::Card body-->
                </div>
            </div>
            <div class="tab-pane fade" id="kt_tab_pane_2" role="tabpanel">
                <div class="card mb-5 mb-xl-10" id="kt_change_password">
                    <!--begin::Card header-->
                    <div class="card-header cursor-pointer">
                        <!--begin::Card title-->
                        <div class="card-title m-0">
                            <h3 class="fw-bold m-0">Đổi mật khẩu</h3>
                        </div>
                        <!--end::Card title-->
                        <!--begin::Action-->
                        <button class="btn btn-sm btn-primary align-self-center" id="btn_update_password">
                            <i class="fas fa-key"></i>Cập nhật
                        </button>
                        <!--end::Action-->
                    </div>
                    <!--begin::Card header-->
                    <!--begin::Card body-->
                    <div class="card-body p-9">
                        <!--begin::Row-->
                        <div class="row mb-7">
                            <!--begin::Label-->
                            <label class="col-lg-2 fw-semibold text-muted required">Mật khẩu cũ</label>
                            <!--end::Label-->
                            <div class="col-lg-10 position-relative d-flex align-items-center input-group-pass w-325px">
                                <span type="button" class="svg-icon svg-icon-1 fs-3 position-absolute me-5 end-0 btn_show_pass" data-target="#oldPass">
                                    <i class="ki-duotone ki-eye fs-3">
                                        <span class="path1 ki-uniEC0B"></span>
                                        <span class="path2 ki-uniEC0B"></span>
                                        <span class="path3 ki-uniEC0D"></span>
                                    </i>
                                </span>
                                <input type="password" id="oldPass" class="form-control pe-13  mb-3 mb-lg-0 none-space bs_max_length" maxlength="255">
                            </div>
                        </div>
                        <!--end::Row-->
                        <!--begin::Input group-->
                        <div class="row mb-7">
                            <!--begin::Label-->
                            <label class="col-lg-2 fw-semibold text-muted required">Mật khẩu mới</label>
                            <!--end::Label-->
                            <div class="col-lg-10 position-relative d-flex align-items-center input-group-pass w-325px">
                                <span type="button" class="svg-icon svg-icon-1 fs-3 position-absolute me-5 end-0 btn_show_pass" data-target="#newPass">
                                    <i class="ki-duotone ki-eye fs-3">
                                        <span class="path1 ki-uniEC0B"></span>
                                        <span class="path2 ki-uniEC0B"></span>
                                        <span class="path3 ki-uniEC0D"></span>
                                    </i>
                                </span>
                                <input type="password" id="newPass" class="form-control pe-13  mb-3 mb-lg-0 none-space bs_max_length" maxlength="255">
                            </div>
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="row mb-7">
                            <!--begin::Label-->
                            <label class="col-lg-2 fw-semibold text-muted required">
                                Nhập lại mật khẩu mới
                            </label>
                            <!--end::Label-->
                            <div class="col-lg-10 position-relative d-flex align-items-center input-group-pass w-325px">
                                <span type="button" class="svg-icon svg-icon-1 fs-3 position-absolute me-5 end-0 btn_show_pass" data-target="#confirmNewPass">
                                    <i class="ki-duotone ki-eye fs-3">
                                        <span class="path1 ki-uniEC0B"></span>
                                        <span class="path2 ki-uniEC0B"></span>
                                        <span class="path3 ki-uniEC0D"></span>
                                    </i>
                                </span>
                                <input type="password" id="confirmNewPass" class="form-control pe-13  mb-3 mb-lg-0 none-space bs_max_length" maxlength="255">
                            </div>
                        </div>
                        <!--end::Input group-->
                    </div>
                    <!--end::Card body-->
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modal_admin_account" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" data-bs-focus="false" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header" id="kt_modal_add_customer_header">
                <!--begin::Modal title-->
                <h2 class="fw-bold modal-title">Cập nhật thông tin cá nhân</h2>
                <!--end::Modal title-->
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2 btn-close" data-bs-dismiss="modal" aria-label="Đóng">
                </div>
                <!--end::Close-->
            </div>
            <div class="modal-body scroll-y mx-5 my-7">
                <div id="frm_admin_account" class="form fv-plugins-bootstrap5 fv-plugins-framework" action="#">
                    <div class="d-flex flex-column scroll-y me-n7 pe-7" id="defaultModal_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}" data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#defaultModal_header" data-kt-scroll-wrappers="#defaultModal_scroll" data-kt-scroll-offset="300px" style="max-height: 707px;">
                        <div class="row">
                            <div class="col-md-12 mb-7 fv-plugins-icon-container">
                                <label class="required fw-semibold fs-6 mb-2" for="adminAccountFullName">Họ và tên</label>
                                <input type="text" id="adminAccountFullName" class="form-control mb-3 mb-lg-0 bs_max_length" maxlength="255">
                            </div>
                            <div class="col-md-12 mb-7 fv-plugins-icon-container">
                                <label class="required fw-semibold fs-6 mb-2" for="adminAccountEmail">Email</label>
                                <input type="text" id="adminAccountEmail" class="form-control mb-3 mb-lg-0 none-space bs_max_length" placeholder="" value="" maxlength="500">
                            </div>
                            <div class="col-md-12 mb-7 fv-plugins-icon-container">
                                <label class="fw-semibold fs-6 mb-2 required" for="adminAccountPhone">Số điện thoại</label>
                                <input type="text" id="adminAccountPhone" class="form-control mb-3 mb-lg-0 none-space bs_max_length input-phone" maxlength="25">
                            </div>
                            <div class="col-md-12 fv-plugins-icon-container">
                                <label class="fw-semibold fs-6 mb-2" for="adminAccountDescription">Ghi chú</label>
                                <textarea id="adminAccountDescription" rows="6" class="form-control  mb-3 mb-lg-0 bs_max_length" maxlength="500" placeholder="" data-kt-autosize="true" value=""></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer text-center justify-content-center">
                <button type="reset" class="btn btn-light me-3" data-bs-dismiss="modal">
                    Hủy
                </button>

                <button class="btn btn-primary" id="saveData">
                    <span class="indicator-label">
                        Lưu
                    </span>
                </button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/assets/js/pages/profile.js" asp-append-version="true"></script>
    <partial name="_FileExplorer" />
}
