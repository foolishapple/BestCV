
@{
    Layout = "_Layout";
    ViewBag.Title = "Quản lý loại bài viết";

}
@section Headers{

    <style type="text/css">
        .search-control {
            white-space: normal;
            padding-right: 10px;
            padding-left: 10px;
        }

        #btnTableSearch {
            margin-right: 10px;
        }

    </style>
}
<!--begin::Toolbar-->
<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <!--begin::Toolbar container-->
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <!--begin::Page title-->
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <!--begin::Title-->
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Loại bài viết</h1>
            <!--end::Title-->
            <!--begin::Breadcrumb-->
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    <a href="@Url.Action("Index","Home")" class="text-muted text-hover-primary">Trang chủ</a>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">Quản lý bài viết</li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">Quản lý loại bài viết</li>
                <!--end::Item-->
            </ul>
            <!--end::Breadcrumb-->
        </div>
        <!--end::Page title-->
    </div>
    <!--end::Toolbar container-->
</div>
<!--end::Toolbar-->
<!--begin::Content-->
<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container  container-fluid ">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header border-0 pt-6">
                        <!--begin::Card title-->
                        <div class="card-title">
                            <!--begin::Search-->
                            <div class="d-flex align-items-center position-relative my-1">
                                <span class="svg-icon svg-icon svg-icon-1 fs-3 position-absolute ms-5 svg_search"></span>
                                <input type="text" id="table_search_all" data-account-type="search" class="form-control form-control-solid  w-250px ps-13" placeholder="Tìm kiếm" />
                            </div>
                            <!--end::Search-->
                        </div>
                        <div class="card-toolbar">
                            <!--begin::Toolbar-->
                            <div class="d-flex justify-content-end" data-kt-user-table-toolbar="base">
                                <!--begin::Add user-->

                                <button type="button" class="btn btn-primary" id="btnAddNew">
                                    <span class="svg-icon svg-icon svg-icon-1 svg_plus p-0">
                                    </span> Thêm mới
                                </button>



                                <!--end::Add user-->
                            </div>
                            <!--end::Toolbar-->
                        </div>
                    </div>

                    <div class="card-body">
                        <table id="tableData" class="table table-row-bordered align-middle table-hover">
                            <thead>
                                <tr class="fw-semibold fs-6 text-muted text-uppercase">
                                    <th class="column-index">STT</th>
                                    <th>Tên</th>
                                    <th>Mô tả</th>
                                    <th class="column-date">Ngày tạo</th>
                                    <th class="column-action-2">Thao tác</th>
                                </tr>
                            </thead>
                            <thead>
                                <tr class="d-none" id="rowSearch">
                                    <th class="column-index"></th>
                                    <th><input type="text" id="searchPostTypeName" class="form-control  tableHeaderFilter" /></th>
                                    <th><input type="text" id="searchPostTypeDescription" class="form-control  tableHeaderFilter" /></th>

                                    <th class="column-date">
                                        <div class="input-group mb-1 date_picker" id="fillter_startDate" data-td-target-input="nearest" data-td-target-toggle="nearest">
                                            <input id="fillter_startDate_value" readonly type="text" class="form-control" data-td-target="#fillter_startDate" />
                                            <span class="input-group-text" data-td-target="#fillter_startDate" data-td-toggle="datetimepicker">
                                                <span class="svg-icon svg-icon svg-icon-1 svg_calender">
                                                </span>
                                            </span>
                                        </div>
                                        <div class="input-group date_picker" id="fillter_endDate" data-td-target-input="nearest" data-td-target-toggle="nearest">
                                            <input id="fillter_endDate_value" readonly type="text" class="form-control" data-td-target="#fillter_endDate" />
                                            <span class="input-group-text" data-td-target="#fillter_endDate" data-td-toggle="datetimepicker">
                                                <span class="svg-icon svg-icon svg-icon-1 svg_calender">
                                                </span>
                                            </span>
                                        </div>
                                    </th>

                                    <th class="text-center column-action-2">
                                        <div class="search-control">
                                            <button class="btn btn-primary form-control mb-1" id="btnTableSearch">
                                                <span class="svg-icon svg-icon svg-icon-1 svg_search_2 m-0">
                                                </span>
                                            </button>
                                            <button class="btn btn-secondary form-control" id="btnTableResetSearch">
                                                <span class="svg-icon svg-icon svg-icon-1 svg_cancel m-0">
                                                </span>
                                            </button>
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                            <tfoot>
                                <tr class="fw-semibold fs-6 text-muted text-uppercase">
                                    <th class="column-index">STT</th>
                                    <th>Tên</th>
                                    <th>Mô tả</th>
                                    <th class="column-date">Ngày tạo</th>
                                    <th class="column-action-2">Thao tác</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<div id="postTypeModal" class="modal fade" tabindex="-1" data-bs-focus="false" role="dialog" aria-labelledby="postTypeModalTitle" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="postTypeModalTitle">Modal Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="needs-validation" id="form-submit-postType">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="form-label" for="postTypeName">
                                Tên
                                <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control  mb-3 mb-lg-0" id="postTypeName">

                        </div>

                        <div class="col-md-12 mb-3">
                            <label class="form-label text-lg-end" for="createdTime">
                                Ngày tạo
                            </label>
                            <div class="">
                                <input type="text" class="form-control  mb-3 mb-lg-0" id="createdTime" disabled />
                            </div>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="postTypeModalDescription" class="form-label">
                                Mô tả
                            </label>
                            <textarea class="form-control  mb-3 mb-lg-0" id="postTypeDescription" data-kt-autosize="true"></textarea>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer sticky-action justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="submitButton">Lưu</button>
            </div>
        </div>
    </div>
</div>
<!--end::Content-->
@section Scripts{
    <script src="~/assets/js/pages/post-type.js" asp-append-version="true"></script>
}