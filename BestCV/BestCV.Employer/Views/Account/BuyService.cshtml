@{
    Layout = "_LayoutEmployer";
    ViewBag.Title = "Mua dịch vụ";
    ViewBag.CurentPage = "buy-service";
}
<style>
    .card-service-style {
        background: #fefaef;
        border: 1px solid #ffc107;
        border-radius: 10px;
        transition: box-shadow .8s;
        min-height: 240px !important;
        max-height: 240px !important;
        height: 240px !important;
    }

        .card-service-style:hover {
            box-shadow: #ffc10755 0px 5px 15px;
            cursor: pointer;
        }

    .btn-buy {
        width: calc(50% - 2px);
        padding: 8px;
    }

    .title-group-service {
        font-size: 24px;
        font-weight: 600;
        letter-spacing: -1px;
    }

    .service-package-price {
        font-weight: 500;
        color: #4aa900;
    }

    .service-package-description {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .skeleton {
        background: linear-gradient(110deg, #ececec 8%, #f5f5f5 18%, #ececec 33%);
        background-size: 200% 100%;
        animation: skeleton-loading 1.5s linear infinite;
        border-radius: 5px;
    }

    @@keyframes skeleton-loading {
        to {
            background-position-x: -200%;
        }
    }

    .skeleton-card {
        border-radius: 10px;
        min-height: 240px !important;
        max-height: 240px !important;
        height: 240px !important;
    }

    .skeleton-title {
        height: 28px !important;
    }

    .skeleton-description {
        height: 12px !important;
    }

    .skeleton-btn {
        width: calc(50% - 2px);
        padding: 8px;
        height: 46px !important;
    }
    .service-name{
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
<div class="pxp-dashboard-content-details">

    @*PostJob*@
    <div class="post-job">
        <span class="text-uppercase title-group-service"><span class="text-primary">Post jobs</span> | Đăng tin tuyển dụng</span>
        <p>Cộng hưởng sức mạnh công nghệ tạo ra hiệu quả đột phá cho tin tuyển dụng của Doanh nghiệp</p>
        <div class="post-job">
            <div class="row" id="content-post-job">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="col-md-4 col-lg-4 col-sm-6 mb-4">
                        <div class="card skeleton-card">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h4 class="skeleton skeleton-title"></h4>
                                    <h4 class="skeleton skeleton-title"></h4>
                                    <p class="skeleton skeleton-description"></p>
                                    <p class="skeleton skeleton-description"></p>
                                    <p class="skeleton skeleton-description"></p>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div class="skeleton skeleton-btn"></div>
                                    <div class="skeleton skeleton-btn"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    @*Premium*@
    <div class="post-job mt-4">
        <span class="text-uppercase title-group-service"><span class="text-primary">Post jobs Premium</span> | Dịch vụ cao cấp</span>
        <p>Cộng hưởng sức mạnh công nghệ tạo ra hiệu quả đột phá cho tin tuyển dụng của Doanh nghiệp</p>
        <div class="post-job">
            <div class="row" id="content-premium">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="col-md-4 col-lg-4 col-sm-6 mb-4">
                        <div class="card skeleton-card">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h4 class="skeleton skeleton-title"></h4>
                                    <h4 class="skeleton skeleton-title"></h4>
                                    <p class="skeleton skeleton-description"></p>
                                    <p class="skeleton skeleton-description"></p>
                                    <p class="skeleton skeleton-description"></p>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div class="skeleton skeleton-btn"></div>
                                    <div class="skeleton skeleton-btn"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    @*Add-on*@
    <div class="post-job mt-4">
        <span class="text-uppercase title-group-service"><span class="text-primary">Add - on</span> | DỊCH VỤ CỘNG THÊM</span>
        <p>Thêm tuỳ chọn giúp tin tuyển dụng nổi bật hơn với ứng viên. Dịch vụ chỉ được áp dụng cho tin đang chạy dịch vụ PostJob</p>
        <div class="post-job">
            <div class="row" id="content-add-on">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="col-md-4 col-lg-4 col-sm-6 mb-4">
                        <div class="card skeleton-card">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h4 class="skeleton skeleton-title"></h4>
                                    <h4 class="skeleton skeleton-title"></h4>
                                    <p class="skeleton skeleton-description"></p>
                                    <p class="skeleton skeleton-description"></p>
                                    <p class="skeleton skeleton-description"></p>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div class="skeleton skeleton-btn"></div>
                                    <div class="skeleton skeleton-btn"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    @*Credit*@
    <div class="post-job mt-4">
        <span class="text-uppercase title-group-service"><span class="text-primary">Credit</span> | NẠP CREDIT MỞ HỒ SƠ ỨNG VIÊN</span>
        <p>Chủ động kết nối trực tiếp với ứng viên tài năng, gia tăng cơ hội tuyển dụng thành công</p>
        <div class="post-job">
            <div class="row" id="content-credit">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="col-md-4 col-lg-4 col-sm-6 mb-4">
                        <div class="card skeleton-card">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h4 class="skeleton skeleton-title"></h4>
                                    <h4 class="skeleton skeleton-title"></h4>
                                    <p class="skeleton skeleton-description"></p>
                                    <p class="skeleton skeleton-description"></p>
                                    <p class="skeleton skeleton-description"></p>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div class="skeleton skeleton-btn"></div>
                                    <div class="skeleton skeleton-btn"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@*Modal*@
<div class="modal fade" id="editModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content p-4">
            <div class="modal-header mb-3">
                <h2 class="modal-title" id="modal-label">Chi tiết dịch vụ</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div>
                <span class="fa-solid fa-circle-check text-success"></span>
                <span id="modal-sub-label"></span>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-8 col-sm-12">
                        <h5 class="bullet ">Thông tin chung</h5>
                        <div id="display-time-div" class="d-none">
                            <span class="fa-solid fa-clock text-success"></span>
                            <span id="display-time"></span>
                        </div>
                        <div id="credit-gift-div" class="d-none">
                            <span class="fa-solid fa-gift text-success"></span>
                            <span id="credit-gift"></span>
                        </div>
                        <div id="push-top-div" class="d-none">
                            <span class="fa-solid fa-thumbtack text-success"></span>
                            <span id="push-top"></span>
                        </div>
                        <h5 class="bullet mt-4">Tính năng</h5>
                        <div id="other-benefit-div">
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-12">
                        <div class="card card-service-style">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h4 id="service-package-name" class='service-name' title=""></h4>
                                    <h4 class="service-package-price" id="service-package-price"></h4>
                                </div>
                                <div class="d-flex flex-column justify-content-end">
                                    <button class="btn btn-outline-warning btn-md mb-2" id="modal-btn-add-to-cart" data-id=""><span class="fa-regular fa-cart-plus"></span> Thêm vào giỏ</button>
                                    <button class="btn btn-warning btn-md" id="modal-btn-quick-check-out" data-id="">Mua ngay</button>
                                    <span class="text-danger">* Giá dịch vụ chưa bao gồm VAT</span>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer mt-4">
                <button type="button" class="btn btn-secondary modal-btn" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>

        //constant service package group
        const SPG_POST_JOB = @ServicePackageGroupId.POST_JOB;
        const SPG_CV_SEARCH = @ServicePackageGroupId.CV_SEARCH;
        const SPG_EMPLOYER_BRANDING = @ServicePackageGroupId.EMPLOYER_BRANDING;
        const SPG_COACHING = @ServicePackageGroupId.COACHING;

        //constant service package type
        const SPT_REQUIREMENT = @ServicePackageTypeId.REQUIREMENT;
        const SPT_ADVANCED = @ServicePackageTypeId.ADVANCED;
        const SPT_CREDIT = @ServicePackageTypeId.CREDIT;
        const SPT_PREMIUM = @ServicePackageTypeId.PREMIUM;
        const SPT_ADD_ON = @ServicePackageTypeId.ADD_ON;

        //constant benefit
        const QUA_TANG_CREDIT = @BenefitId.QUA_TANG_CREDIT;
        const THOI_GIAN_HIEN_THI = @BenefitId.THOI_GIAN_HIEN_THI;
        const DAY_TOP_KHUNG_GIO_VANG = @BenefitId.DAY_TOP_KHUNG_GIO_VANG;


    </script>
    <script src="~/js/pages/buy-service.js" asp-append-version="true"></script>
}