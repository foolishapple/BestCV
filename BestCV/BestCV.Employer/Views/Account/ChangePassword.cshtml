
@{
    Layout = "_LayoutEmployer";
    ViewBag.Title = "Cập nhật mật khẩu";
    ViewBag.CurentPage = "change-password";
}
<style>
    #changePassword .position-relative > span {
        position: absolute;
        top: 50%;
        right: 30px;
        transform: translateY(-50%);
        opacity: .7;
    }

    .show-hide-password {
        cursor: pointer;
    }
</style>

<div class="pxp-dashboard-content-details">
    <h1>Cập nhật mật khẩu</h1>
    <p class="pxp-text-light">Chọn một mật khẩu mới cho tài khoản của bạn. </p>

    <form id="changePassword">
        <div class="row mt-4 mt-lg-5">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="old-password" class="form-label">Mật khẩu cũ</label>
                    <div class="position-relative">
                        <input type="password" id="old-password" class="form-control " placeholder="Mật khẩu cũ">
                        <span class="fa fa-eye show-hide-password"></span>
                    </div>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="new-password" class="form-label">Mật khẩu mới</label>
                    <div class="position-relative">
                        <input type="password" id="new-password" class="form-control" placeholder="Mật khẩu mới">
                        <span class="fa fa-eye show-hide-password"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="new-password-repeat" class="form-label">Nhập lại mật khẩu mới</label>
                    <div class="position-relative">
                        <input type="password" id="new-password-repeat" class="form-control" placeholder="Nhập lại mật khẩu mới">
                        <span class="fa fa-eye show-hide-password"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4 mt-lg-5">
            <button id="btnUpdatePassword" type="button" class="btn rounded-pill pxp-section-cta">Cập nhật mật khẩu</button>
        </div>
    </form>
</div>
<script>

    var DefaultAPIURL = "@ViewBag.DefaultAPIURL";
</script>
<script src="~/js/pages/change-password.js" asp-append-version="true"></script>
