@{
    Layout = "_LayoutEmployer";
    ViewBag.Title = "Quản lý chiến dịch tuyển dụng";
}
@section Headers{
    <link href="~/css/select2-table.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/css/pages/recruitment-campaign.css" rel="stylesheet" asp-append-version="true"/>
}
<div class="pxp-dashboard-content-details position-relative">
    <h1>Quản lý chiến dịch tuyển dụng</h1>
    <button class="btn rounded-pill pxp-nav-btn btn_add"  data-id="0">
        Chiến dịch mới
    </button>
    <div class="mt-2 mt-lg-3">
        <div class="row justify-content-between align-content-center">
            <div class="col-auto order-2 order-sm-1">
                <div class="pxp-company-dashboard-jobs-bulk-actions mb-3">
                    <div class="pe-2">
                        <select class="form-select" data-minimum-results-for-search="-1" control="select2" data-placeholder="" data-width="155px" id="tbl_fillter_main" style="display: none;">
                            <option value="all">Hiển thị tất cả</option>
                            <option value="isOpen">Hiển thị chiến dịch đang bật</option>
                        </select>
                    </div>
                    <div>
                        <select class="form-select" id="tbl_fillter_status"  style="display: none;">
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-auto order-1 order-sm-2">
                <div class="pxp-company-dashboard-jobs-search mb-3">
                    <div class="pxp-company-dashboard-jobs-search-results me-3" id="tbl_info">16 chiến dịch</div>
                    <div class="pxp-company-dashboard-jobs-search-search-form">
                        <div class="input-group">
                            <span class="input-group-text"><span type="button" class="fa fa-search btn_search_all"></span></span>
                            <input type="text" class="form-control" id="search_all" placeholder="Tìm kiếm...">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tbl-data table-responsive">
            <table class="table table-hover align-start" id="tbl_recruitment_campaign">
                <thead>
                    <tr>
                        <th></th>
                        <th>Chiến dịch tuyển dụng</th>
                        <th>Tin tuyển dụng</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody class="align-start fw-normal">
                </tbody>
            </table>
            <div class="w-100">
                <div class="w-100 row ,-0 mt-2 mt-lg-3 justify-content-between align-items-center">
                    <div class="col-auto">
                        <nav class="mt-3 mt-sm-0" aria-label="Candidates pagination">
                            <ul class="pagination pxp-pagination" id="candidate_paging">
                                <li class="page-item active" aria-current="page">
                                    <span class="page-link">1</span>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                            </ul>
                        </nav>
                    </div>
                    <div class="col-auto d-none">
                        <a href="#" class="btn rounded-pill pxp-section-cta mt-3 mt-sm-0">Show me more<span class="fa fa-angle-right"></span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="editModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content p-4">
            <div class="modal-header mb-3">
                <h5 class="modal-title" id="staticBackdropLabel">Tạo mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div>
                    <div class="mb-3">
                        <label for="campaign-name" class="form-label">Tên chiến dịch <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="campaign-name" maxlength="255">
                    </div>
                    <div class="mb-3">
                        <label for="campaign-status" class="form-label">Trạng thái <span class="text-danger">*</span></label>
                        <select class="form-select" control="select2" id="campaign-status" data-dropdown-parent="#editModal" data-width="100%" aria-describedby="campaign-status-help">

                        </select>
                        <div id="campaign-status-help" class="form-text">Chọn trạng thái đăng cho chiến dịch của bạn.</div>
                    </div>
                    <div class="mb-3">
                        <label for="campaign-description" class="form-label">Mô tả</label>
                        <textarea class="form-control" autosize="true" maxlength="500" rows="8" id="campaign-description"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-pill modal-btn" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary rounded-pill modal-btn btn_submit">Lưu</button>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        const MAXIMUM_CANDIDATE_SHOW = @RecruitmentCampaignConst.MAXIMUM_CANDIDATE_SHOW;
        const MAXIMUM_JOB_SHOW = @RecruitmentCampaignConst.MAXIMUM_JOB_SHOW;
    </script>
    <script src="~/js/pages/recruitment-campaigns.js" asp-append-version="true"></script>
}