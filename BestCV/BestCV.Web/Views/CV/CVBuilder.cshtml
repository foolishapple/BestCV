                    <i class="fa-solid fa-plus"></i>
                    Thêm hàng
                </button>
            </div>
        </div>

        <!-- Context menu ngang -->
        <div id="cv-context-menu-horizontal" class="d-none">
            <button class="cv-btn-horizontal cv-color-primary d-none" id="btnGoDown" data-bs-toggle="tooltip"
                    data-bs-title="Default tooltip">
                <i class="fa-solid fa-arrow-down"></i>
            </button>
            <button class="cv-btn-horizontal cv-color-primary d-none" id="btnGoUp">
                <i class="fa-solid fa-arrow-up"></i>
            </button>
            <button class="cv-btn-horizontal cv-color-secondary d-none">
                <i class="fa-solid fa-plus"></i>
            </button>

            <!-- Nút copy -->
            <button class="cv-btn-horizontal cv-color-secondary d-none" id="btnCopy" data-bs-toggle="tooltip"
                    data-bs-title="Tạo bản sao">
                <i class="fa-light fa-copy"></i>
            </button>

            <!-- Nút tăng khoảng cách lề -->
            <button class="cv-btn-horizontal cv-color-secondary" id="btnAddPadding" data-bs-toggle="tooltip"
                    data-bs-title="Tăng khoảng cách lề">
                <i class="fa-solid fa-arrow-right-from-line"></i>
            </button>
            <!-- Nút giảm khoảng cách lề -->
            <button class="cv-btn-horizontal cv-color-secondary" id="btnRemovePadding" data-bs-toggle="tooltip"
                    data-bs-title="Giảm khoảng cách lề">
                <i class="fa-solid fa-arrow-left-to-line"></i>
            </button>
            <button class="cv-btn-horizontal cv-color-secondary d-none">
                <i class="fa-regular fa-folder-user"></i>
            </button>

            <!-- Nút đổi bố cục -->
            <button class="cv-btn-horizontal cv-color-secondary d-none" id="btn-change-layout" data-bs-toggle="tooltip"
                    data-bs-title="Đổi bố cục">
                <i class="fa-solid fa-arrows-rotate"></i>
            </button>

            <!-- Nút xóa phần tử -->
            <button class="cv-btn-horizontal cv-color-error" id="btn-remove-element" data-bs-toggle="tooltip"
                    data-bs-title="Xóa">
                <i class="fa-solid fa-trash"></i>
            </button>
            <!--Nút đóng-->
            <button class="cv-btn-horizontal cv-color-error" id="btn-exit" data-bs-toggle="tooltip"
                    data-bs-title="Đóng">
                <i class="fa-solid fa-x"></i>
            </button>
