            <i class="fa-solid fa-align-left"></i>
        </button>

        <!-- center -->
        <button class="cv-edit cv-btn-edit cv-edit-text-align" data-text-align="center">
            <i class="fa-solid fa-align-center"></i>
        </button>

        <!-- right -->
