        <div class="cv-properties-separator ms-2"></div>

        <!-- save -->
        <button id="btnSave" class="cv-edit cv-btn-edit">
            <i class="fa-solid fa-floppy-disk"></i>
        </button>

        <!-- template -->
        <button id="btnSelectTemplate" class="cv-edit cv-btn-edit">
            <i class="fa-solid fa-file-lines"></i>
        </button>

        <!-- print preview -->
        <button id="btnPrint" class="cv-edit cv-btn-edit">
            <i class="fa-solid fa-print"></i>
        </button>

