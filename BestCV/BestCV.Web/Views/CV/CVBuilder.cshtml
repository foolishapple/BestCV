            <i class="fa-solid fa-align-right"></i>
        </button>

        <!-- justify -->
        <button class="cv-edit cv-btn-edit cv-edit-text-align" data-text-align="justify">
            <i class="fa-solid fa-align-justify"></i>
        </button>

