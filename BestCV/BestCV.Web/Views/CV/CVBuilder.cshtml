        <!-- bold -->
        <button id="btnBold" class="cv-edit cv-btn-edit">
            <i class="fa-solid fa-bold"></i>
        </button>

        <!-- italic -->
        <button id="btnItalic" class="cv-edit cv-btn-edit">
            <i class="fa-solid fa-italic"></i>
        </button>

        <!-- underline -->
        <button id="btnUnderline" class="cv-edit cv-btn-edit">
            <i class="fa-solid fa-underline"></i>
        </button>

        <!-- strikethrough -->
