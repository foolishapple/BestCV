    /*wish list css*/
    .icon-wishlist {
        cursor: pointer;
        width: 22px;
        height: 21px;
        opacity: .5;
        background: url('data:image/svg+xml;base64,');
    }


    .in-wishlist {
        opacity: 1;
        animation-name: wishlist-ani;
        animation-duration: 1000ms;
    }

    .in-wishlist-2 {
        cursor: pointer;
        width: 22px;
        height: 21px;
        opacity: .5;
        background: url('data:image/svg+xml;base64,');
    }

    @@keyframes wishlist-ani {
        0% {
            transform: scale(1);
        }

        25% {
            transform: scale(.5);
        }

        50% {
            transform: scale(1.2);
        }

        100% {
            transform: scale(1);
        }
    }

    #btn-save-job {
        padding: 12px !important;
        border: 1px solid black;
        border-radius: 50px !important;
    }

    .btn-border-10 {
        border-radius: 10px !important;
    }



    .form-check .form-check-input {
        float: left;
        margin-left: -0.5em !important;
    }

    .modal-content {
        border-radius: 0.25rem !important;
    }

    div:where(.swal2-container) .swal2-html-container{
        margin : unset !important;
        font-size: 1em !important;
    }

    .badge-city {
        background-color: rgb(169 169 169 / 41%);
        color: #000000;
        font-size: 13px;
        display: inline-block;
        border-radius: 3px;
        padding: 3px 8px;
        text-decoration: none;
        margin-right: 4px;
        margin-bottom: 4px;
        transition: var(--pxpHoverTransition);
        transition-property: background-color, color;
    }


    .title-reference-job{
        border-left: 6px solid #ffca2c;
        color: #212f3f;
        font-style: normal;
        font-weight: 700;
        letter-spacing: -.2px;
        line-height: 28px;
        margin: 0 0 20px;
        padding-left: 10px;
    }


    .job-name, .job-company, .text-ellipsis {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-weight: 500;
    }

    .box-card-title, .salary-job {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .hover-card-item {
        cursor: pointer;
    }

    .badge-city {
        background-color: rgb(169 169 169 / 41%);
        color: #000000;
        font-size: 13px;
        display: inline-block;
        border-radius: 3px;
        padding: 3px 8px;
        text-decoration: none;
        margin-right: 4px;
        margin-bottom: 4px;
        transition: var(--pxpHoverTransition);
        transition-property: background-color, color;
    }

    .text-color-money {
        color: #ff7d55 !important;
    }

    .card-border-item {
        border-radius: 10px !important;
    }

    .card-item {
        min-height: 770px;
        max-height: 770px;
    }

    .ribbon-job {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 5px 10px;
        position: absolute;
        z-index: 1;
        background-color: #f85a5a;
        box-shadow: var(--bs-ribbon-label-box-shadow);
        color: var(--bs-primary-inverse);
        top: 50%;
        right: 0;
        transform: translateX(5px) translateY(-50%);
        border-top-left-radius: 0.475rem;
        border-bottom-left-radius: 0.475rem;
        right: -5px
    }

    .m-10px {
        margin: 10px;
    }

    .bg-urgent {
        color: rgb(255, 125, 85);
        background-color: rgb(255, 236, 230);
    }

    .bg-top {
        color: red;
        background-color: rgb(255 0 0 / 20%)
    }

    .img-cover-fit {
        object-fit: scale-down;
        display: block;
        width: 100%;
    }

    .border-ribbon {
        border-radius: 0.25rem 0 0 0.25rem !important;
    }
</style>
