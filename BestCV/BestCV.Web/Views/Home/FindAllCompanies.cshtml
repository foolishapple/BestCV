@{
    ViewData["Title"] = "Tìm kiếm tất cả những công ty";
    ViewBag.IsHomePage = false;
}
<style>
    .hover-card:hover {
        /* border: 1px solid gray !important; */
        box-shadow: #f4c6345e 0px 5px 15px;
    }

    #description img {
        display: none;
    }

    #description {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    #location, #activity {
        border-radius: 30px;
    }

        #location .input-group-text,
        #activity .input-group-text {
            border-radius: 30px;
            border: none;
            background-color: transparent;
            position: absolute;
            top: calc((100% - 16px)/2);
            left: 20px;
            padding: 0;
            z-index: 1;
        }

    #select2-search-location-container,
    #select2-search-activity-container {
        padding-left: 30px;
        border-radius: 30px;
    }

    .row {
        margin-bottom: 0px !important;
    }

    .pxp-nav.pxp-light > ul > li > a {
        color: #000;
    }

    .pxp-logo.pxp-light > a {
        color: #000;
    }

    .pxp-user-nav-name {
        color: #000;
    }

    .pxp-user-nav-dropdown > .dropdown-toggle::after {
        margin-left: 7px;
        border-top-color: #000;
    }

    .select2-container .select2-selection {
        border: 0px;
    }

    .pxp-companies-card-1-company-logo {
        background-repeat: no-repeat;
    }

    /*skeleton*/
    .image-skeleton-loading, .title-skeleton-loading, .read-more-skeleton-loading {
        background: #eee;
        background: linear-gradient(110deg, #ececec 8%, #f5f5f5 18%, #ececec 33%);
        border-radius: 5px;
        background-size: 200% 100%;
        animation: 1.5s shine linear infinite;
    }

    .title-skeleton-loading {
        height: 20px;
        margin-bottom: 5px;
    }

    .read-more-skeleton-loading {
        height: 20px;
    }

    .image-skeleton-loading {
        height: 80px;
        width: 80px;
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }



    @@keyframes shine {
        to {
            background-position-x: -200%;
        }
    }

    .skeleton {
        background: linear-gradient(110deg, #ececec 8%, #f5f5f5 18%, #ececec 33%);
        background-size: 200% 100%;
        animation: 1.5s shine linear infinite;
    }

    .skeleton-body {
        height: 358px !important
    }

    .skeleton-filter {
        height: 20px !important
    }

    .hash-tag {
        background-color: rgb(169 169 169 / 41%);
        color: #000000;
        font-size: 13px;
        display: inline-block;
        border-radius: 3px;
        padding: 3px 8px;
        text-decoration: none;
        margin-right: 4px;
        margin-bottom: 4px;
        transition: var(--pxpHoverTransition);
        transition-property: background-color, color
    }

    .location-detail {
        padding-right: 18px !important;
        padding-inline-start: 3px;
    }

    .btn-add-candidate {
        border-radius: 10px;
        border: 1px solid #000;
        background: #FFF;
        transition: background-color 0.3s, color 0.3s;
        padding: 10px 15px;
        color: #2E2165;
        font-size: 14px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
    }

        .btn-add-candidate.unfollow {
            border-radius: 10px;
            border: 1px solid #F4C634;
            background: #F4C634;
        }

    .line-clamp-5{
        display: -webkit-box;
        -webkit-line-clamp: 5;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .job-container{
        width: 100%;
        padding-right: 0.75rem;
        padding-left: 0.75rem;
        margin-right: auto;
        margin-left: auto;
    }
</style>
<section class="pxp-page-header-simple d-flex align-items-center m-l-r-4pc" style="background-image: url(/assets/images/Backgrond-jobi.png);">

    <div class="pxp-container">
        <h1 class="text-center header-title">Tìm kiếm công ty</h1>
        <div class="pxp-hero-subtitle text-center header-subtitle">Cơ hội làm việc cho những công ty tốt nhất</div>
    </div>
</section>

