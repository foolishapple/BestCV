@{
    Layout = "_LayoutDashBoard";
    ViewBag.Title = "Cài đặt gợi ý việc làm";
    ViewBag.CurrentPage = "job-suggestion-settings";
}
<style>
.form-check-input.me-2 {
    border: 1px solid rgba(0,0,0,.25);
}

        .pxp-jobs-list-side-filter {
            box-shadow: 0px 6px 12px rgba(0,0,0,0.05);
        }

        .form-select-custom{
            border: 1px solid #ccc;
            border-radius:5px;
            padding: 0.5rem 0.75rem;
        }

        .tableheaderFillter{
            border: revert !important;
            border-radius: 30px !important;
            padding: 10px !important;
            margin-top: 5px;
            opacity: 0.5;
            padding: 1rem;
        }

        .box-item-gender .box-radio{
            display: flex;
            gap: 0 44px;
        }

        .box-item-gender .box-radio .radio-inline{
            align-items: center;
            color: #333;
            display: flex;
            font-size: 15px;
            font-weight: 400;
            line-height: 18px;
            margin-left: 0!important;
            position: relative;
            cursor: pointer;
        }
        .radio-inline input{
            margin: 5px;
        }

        .grid-container {
            display: grid;
            grid-template-columns: 1fr 1fr; /* Creates 2 columns */
            grid-gap: 20px; /* Sets gap between grid items */
        }

        .search-button-container {
            margin-top: 20px;
            text-align: center;
        }

            .switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 30px;
    }

    .switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        -webkit-transition: .4s;
        transition: .4s;
    }

    .slider:before {
        position: absolute;
        content: "";
        height: 26px;
        width: 26px;
        left: 2px;
        bottom: 2px;
        background-color: white;
        -webkit-transition: .4s;
        transition: .4s;
        border-radius: 50%;  /* Makes the inner dot circular */
    }

    input:checked + .slider {
        background-color: #2196F3;
    }

    input:focus + .slider {
        box-shadow: 0 0 1px #2196F3;
    }

    input:checked + .slider:before {
        -webkit-transform: translateX(26px);
        -ms-transform: translateX(26px);
        transform: translateX(26px);
    }

    /* Elliptical sliders */
    .slider {
        border-radius: 50px;  /* Makes the outer slider elliptical */
    }

    .search-status {
        margin-top: 10px;
        color: red;
    }


.toggle-search-container {
    padding: 10px;
    margin-right: 10px;
}

</style>
