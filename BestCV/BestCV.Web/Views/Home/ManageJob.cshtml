@{
    Layout = "_LayoutDashBoard";
    ViewBag.Title = "Quản lý công việc";
    ViewBag.CurrentPage = "manage-jobs";
}
<style>
    #table_candidate_apply_job_length,
    #table_candidate_save_job_length,
    #table_candidate_viewed_job_length {
        display: none;
    }

    .dataTables_paginate {
        display: none;
    }

    .link-column {
        color: black;
        text-overflow: ellipsis;
    }

        .link-column:hover {
            text-decoration: underline;
        }

    .job-name-column {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .table > tbody {
        vertical-align: top;
    }

        .status-apply-job {
            vertical-align: middle !important;
        }

    .text-color-money {
        color: #ff7d55;
    }

    .fw-600{
        font-weight: 600 !important;
    }

    .text-chocolate{
        color : chocolate!important;
    }
</style>
<h1 class="mb-4">Quản lý công việc</h1>

<div class="mt-2 mt-lg-2">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Đã ứng tuyển</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Đã lưu</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Đã xem</button>
        </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
        @*job đã ứng tuyển*@
        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
            <div class="row justify-content-between align-content-center">

                <div class="col-12 order-1 order-sm-2">
                    <div class="pxp-candidate-dashboard-jobs-search mb-3">
                        <div class="pxp-candidate-dashboard-jobs-search-results me-3"></div>
                        <div class="pxp-candidate-dashboard-jobs-search-search-form">
                            <div class="input-group">
                                <span class="input-group-text"><span class="fa fa-search"></span></span>
                                <input type="text" class="form-control" id="table_search_all" placeholder="Tìm kiếm...">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="table_candidate_apply_job">
                    <thead>
                        <tr>
                            <th>Tin tuyển dụng</th>
                            <th>Công ty</th>
                            <th>CV đã ứng tuyển</th>
                            <th>Trạng thái</th>
                            <th>Thời gian ứng tuyển</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <div class="w-100">
                    <div class="w-100 row mt-2 mt-lg-3 justify-content-between align-items-center">
                        <div class="col-auto">
                            <nav class="mt-3 mt-sm-0" aria-label="Candidates pagination">
                                <ul class="pagination pxp-pagination" id="apply-job-paging">
                                </ul>
                            </nav>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        @*job đã lưu*@
        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">
            <div class="row justify-content-between align-content-center">

                <div class="col-12 order-1 order-sm-2">
                    <div class="pxp-candidate-dashboard-jobs-search mb-3">
                        <div class="pxp-candidate-dashboard-jobs-search-results me-3"></div>
                        <div class="pxp-candidate-dashboard-jobs-search-search-form">
                            <div class="input-group">
                                <span class="input-group-text"><span class="fa fa-search"></span></span>
                                <input type="text" class="form-control" id="table_search_all_save_job" placeholder="Tìm kiếm...">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="table_candidate_save_job">
                    <thead>
                        <tr>
                            <th>Tin tuyển dụng</th>
                            <th>Công ty</th>
                            <th>Thời gian</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <div class="w-100">
                    <div class="w-100 row mt-2 mt-lg-3 justify-content-between align-items-center">
                        <div class="col-auto">
                            <nav class="mt-3 mt-sm-0" aria-label="Candidates pagination">
                                <ul class="pagination pxp-pagination" id="save-job-paging">
                                </ul>
                            </nav>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        @*job đã xem*@
        <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab" tabindex="0">
            <div class="row justify-content-between align-content-center">

                <div class="col-12 order-1 order-sm-2">
                    <div class="pxp-candidate-dashboard-jobs-search mb-3">
                        <div class="pxp-candidate-dashboard-jobs-search-results me-3"></div>
                        <div class="pxp-candidate-dashboard-jobs-search-search-form">
                            <div class="input-group">
                                <span class="input-group-text"><span class="fa fa-search"></span></span>
                                <input type="text" class="form-control" id="table_search_all_viewed_job" placeholder="Tìm kiếm...">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="table_candidate_viewed_job">
                    <thead>
                        <tr>
                            <th>Tin tuyển dụng</th>
                            <th>Công ty</th>
                            <th>Thời gian</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <div class="w-100">
                    <div class="w-100 row mt-2 mt-lg-3 justify-content-between align-items-center">
                        <div class="col-auto">
                            <nav class="mt-3 mt-sm-0" aria-label="Candidates pagination">
                                <ul class="pagination pxp-pagination" id="viewed-job-paging">
                                </ul>
                            </nav>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/assets/js/pages/quan-ly-viec-lam.js"></script>
}