@{
    ViewData["Title"] = "Việc làm phù hợp";
    ViewBag.IsHomePage = false;
}
<style>
    .pxp-nav.pxp-light > ul > li > a {
        color: #000;
    }

    .pxp-logo.pxp-light > a {
        color: #000;
    }

    .pxp-user-nav-name {
        color: #000;
    }

    .pxp-user-nav-dropdown > .dropdown-toggle::after {
        margin-left: 7px;
        border-top-color: #000;
    }

    a.btn.rounded-pill.pxp-user-nav-trigger.btn-signin.\) {
        color: #000;
    }

    .text-color-money {
        color: #ff7d55;
    }

    .hash-tag {
        background-color: rgb(169 169 169 / 41%);
        color: #000000;
        font-size: 13px;
        display: inline-block;
        border-radius: 3px;
        padding: 3px 8px;
        text-decoration: none;
        margin-right: 4px;
        margin-bottom: 4px;
        transition: var(--pxpHoverTransition);
        transition-property: background-color, color
    }

    .hash-tag-expired {
        background-color: rgb(255 0 0 / 5%);
    }

    .banner-img {
        width: 100% !important;
    }

    .sticky-top {
        top: 100px !important;
    }

    .pxp-blogs-list-side-panel {
        margin-top: 0 !important;
    }

    .select2-selection {
        border: unset !important;
    }


    /*wishlist css*/
    .icon-wishlist {
        cursor: pointer;
        width: 22px;
        height: 21px;
        opacity: .5;
        background: url('data:image/svg+xml;base64,');
    }


    .in-wishlist {
        opacity: 1;
        animation-name: wishlist-ani;
        animation-duration: 1000ms;
    }

    .in-wishlist-2 {
        cursor: pointer;
        width: 22px;
        height: 21px;
        opacity: .5;
        background: url('data:image/svg+xml;base64,');
    }

    @@keyframes wishlist-ani {
        0% {
            transform: scale(1);
        }

        25% {
            transform: scale(.5);
        }

        50% {
            transform: scale(1.2);
        }

        100% {
            transform: scale(1);
        }
    }

    /*skeleton*/
    .image-skeleton-loading, .title-skeleton-loading, .read-more-skeleton-loading {
        background: #eee;
        background: linear-gradient(110deg, #ececec 8%, #f5f5f5 18%, #ececec 33%);
        border-radius: 5px;
        background-size: 200% 100%;
        animation: 1.5s shine linear infinite;
    }

    .title-skeleton-loading {
        height: 20px;
        margin-bottom: 5px;
    }

    .read-more-skeleton-loading {
        height: 20px;
    }

    .image-skeleton-loading {
        height: 80px;
        width: 80px;
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }



    @@keyframes shine {
        to {
            background-position-x: -200%;
        }
    }

    .skeleton {
        background: linear-gradient(110deg, #ececec 8%, #f5f5f5 18%, #ececec 33%);
        background-size: 200% 100%;
        animation: 1.5s shine linear infinite;
    }

    .skeleton-body {
        height: 180px !important
    }

    .skeleton-filter {
        height: 20px !important
    }

    .badge-city {
        background-color: rgb(169 169 169 / 41%);
        color: #000000;
        font-size: 13px;
        display: inline-block;
        border-radius: 3px;
        padding: 3px 8px;
        text-decoration: none;
        margin-right: 4px;
        margin-bottom: 4px;
        transition: var(--pxpHoverTransition);
        transition-property: background-color, color;
    }

    .img-cover-fit {
        object-fit: scale-down;
        width: 117px;
        height: 117px;
        border-radius: 10px;
         display: block;
        width: 100%;
    }

    .bg-urgent {
        color: rgb(255, 125, 85);
        background-color: rgb(255, 236, 230);
    }

    .bg-top {
        color: red;
        background-color: rgb(255 0 0 / 20%)
    }

    .bg-management {
        color: blueviolet;
        background-color: rgb(138 43 226 / 20%);
    }

    .mt-20px {
        margin-top: 20px;
    }

    .mb-20px {
        margin-bottom: 20px;
    }

    .mt-25px {
        margin-top: 25px;
    }

    #countJob {
        color: #2E2165;
        font-size: 23px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
    }

    #right-side-panel {
        padding: 30px 0 !important;
    }

    .m-l-r-17pc {
        margin-right: 17.78%;
        margin-left: 17.78%;
    }
</style>
<section class="pxp-page-header-simple d-flex align-items-center m-l-r-4pc" style="background-image: url(/assets/images/Backgrond-jobi.png);">
    <div class="pxp-container d-flex flex-column">
        <h1 class="text-center">Tìm việc làm</h1>
        <div class="pxp-hero-form pxp-hero-form-round pxp-large mt-20px m-l-r-17pc">
            <form class="row gx-3 align-items-center">
                <div class="col-12 col-lg">
                    <div class="input-group mb-3 mb-lg-0">
                        <span class="input-group-text"><span class="fa fa-search"></span></span>
                        <input type="text" class="form-control" placeholder="Chức vụ hoặc từ khóa" id="search-all-job">
                    </div>
                </div>
                <div class="col-12 col-lg pxp-has-left-border">
                    <div class="input-group mb-3 mb-lg-0">
                        <span class="input-group-text"><span class="fa fa-map-marker"></span></span>
                        @*<input type="text" class="form-control" placeholder="Địa điểm" id="search-location">*@
                        <select class="form-select" id="search-location"></select>
                    </div>
                </div>
                <div class="col-12 col-lg pxp-has-left-border">
                    <div class="input-group mb-3 mb-lg-0">
                        <span class="input-group-text"><span class="fa fa-cube"></span></span>

                        <select class="form-select" id="search-category">
                            <option value="0">Tất cả danh mục</option>
                        </select>
                    </div>
                </div>
                <div class="col-auto col-lg-auto">
                    <button id="btn-search-job">Tìm việc làm</button>
                </div>
            </form>

        </div>
        <div class="pxp-hero-subtitle text-center mt-20px">Hàng ngàn việc làm tốt với mức lương cao, đồng nghiệp thân thiện và chế độ đãi ngộ cực tốt!</div>
    </div>
</section>
<section class="mt-32px mb-32px">
    <div class="container">
        <div class="pxp-jobs-list-top mt-4 mt-lg-0">
            <div class="row justify-content-between align-items-center">
                <div class="col-9">
                    <h1 id="pageInfo" class="fw-bold">Việc làm phù hợp</h1>
                    <span id="countJob"></span>
                </div>
                <div class="col-3">
                    <select class="form-select" id="selectOrder">
                        <option value="desc">Mới nhất</option>
                        <option value="asc">Cũ nhất</option>
                    </select>
                </div>
            </div>
        </div>

        <div id="section-job">
            @for (var i = 0; i < 15; i++)
            {
                <div class="pxp-jobs-card-3 pxp-has-border skeleton skeleton-body">
                </div>
            }
        </div>

        <div class="row mt-32px justify-content-center">
            <div class="col-auto">
                <nav class="mt-32px" aria-label="Jobs list pagination">
                    <ul class="pagination pxp-pagination" id="pagination-job">
                        @*<li class="page-item active" aria-current="page">
                        <span class="page-link">1</span>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>*@
                    </ul>
                </nav>
            </div>

        </div>

    </div>
</section>

@section Scripts{
    <script>
        const salaryFrom = @SalaryTypeId.FROM;
        const salaryTo = @SalaryTypeId.TO;
        const salaryBetween = @SalaryTypeId.BETWEEN;
        const salaryAgrrement = @SalaryTypeId.AGREEMENT;

    </script>
    <script src="~/assets/js/pages/viec-lam-phu-hop.js" asp-append-version="true"></script>
}
