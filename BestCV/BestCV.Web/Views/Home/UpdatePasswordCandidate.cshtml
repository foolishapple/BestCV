@{
    Layout = "_LayoutDashBoard";
    ViewBag.Title = "Đổi mật khẩu";
    ViewBag.CurrentPage = "update-password";
}
<style>
    .textError {
        text-align: left;
    }

    #changePassword .position-relative > span {
        position: absolute;
        top: 50%;
        right: 30px;
        transform: translateY(-50%);
        opacity: .7;
    }

    .show-hide-password {
        cursor: pointer;
    }
</style>
<div class="pxp-dashboard-content-details">
    <h1>Cập nhật mật khẩu</h1>
    <p class="pxp-text-light">Cập nhật mật khẩu mới cho tài khoản</p>

    <form id="changePassword">
        <div class="row mt-4 mt-lg-5">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="old-password" class="form-label">Mật khẩu hiện tại</label>
                    <div class="position-relative">
                        <input type="password" id="old-password" class="form-control " placeholder="Mật khẩu hiện tại">
                        <span class="fa fa-eye show-hide-password"></span>
                    </div>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="new-password" class="form-label">Mật khẩu mới</label>
                    <div class="position-relative">
                        <input type="password" id="new-password" class="form-control" placeholder="Mật khẩu mới">
                        <span class="fa fa-eye show-hide-password"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="new-password-repeat" class="form-label">Mật khẩu xác nhận</label>
                    <div class="position-relative">
                        <input type="password" id="new-password-repeat" class="form-control" placeholder="Mật khẩu xác nhận">
                        <span class="fa fa-eye show-hide-password"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4 mt-lg-5">
            <button id="btnUpdatePassword" type="button" class="btn rounded-pill pxp-section-cta">Cập nhật mật khẩu</button>
        </div>
    </form>
</div>
<script src="~/assets/js/pages/_layout.js"></script>
<script src="~/assets/js/pages/change-pass.js"></script>

    
