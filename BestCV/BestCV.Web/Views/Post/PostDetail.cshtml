    a.btn.rounded-pill.pxp-user-nav-trigger.btn-signin.\) {
        color: #000;
        background: white;
    }

    .text-color-money {
        color: #ff7d55;
    }

    .hash-tag {
        background-color: rgb(169 169 169 / 41%);
        color: #000000;
        font-size: 13px;
        display: inline-block;
        border-radius: 3px;
        padding: 3px 8px;
        text-decoration: none;
        margin-right: 4px;
        margin-bottom: 4px;
        transition: var(--pxpHoverTransition);
        transition-property: background-color, color
    }

    .banner-img {
        width: 100% !important;
    }

    .pxp-blogs-list-side-panel{
        margin-right: -5rem;
    }

    .sticky-top {
        top: 100px !important;
    }

    .pxp-blogs-list-side-panel {
        margin-top: 0 !important;
    }

    .select2-selection {
        border: unset !important;
    }


    /*wishlist css*/
    .icon-wishlist {
        cursor: pointer;
        width: 22px;
        height: 21px;
        opacity: .5;
        background: url('data:image/svg+xml;base64,');
    }


    .in-wishlist {
        opacity: 1;
        animation-name: wishlist-ani;
        animation-duration: 1000ms;
    }

    .in-wishlist-2 {
        cursor: pointer;
        width: 22px;
        height: 21px;
        opacity: .5;
        background: url('data:image/svg+xml;base64,');
    }

    @@keyframes wishlist-ani {
        0% {
            transform: scale(1);
        }

        25% {
            transform: scale(.5);
        }

        50% {
            transform: scale(1.2);
        }

        100% {
            transform: scale(1);
        }
    }

    /*skeleton*/
    .image-skeleton-loading, .title-skeleton-loading, .read-more-skeleton-loading {
        background: #eee;
        background: linear-gradient(110deg, #ececec 8%, #f5f5f5 18%, #ececec 33%);
        border-radius: 5px;
        background-size: 200% 100%;
        animation: 1.5s shine linear infinite;
    }

    .title-skeleton-loading {
        height: 20px;
        margin-bottom: 5px;
    }

    .read-more-skeleton-loading {
        height: 20px;
    }

    .image-skeleton-loading {
        height: 80px;
        width: 80px;
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }

    @@keyframes shine {
        to {
            background-position-x: -200%;
        }
    }

    .skeleton {
        background: linear-gradient(110deg, #ececec 8%, #f5f5f5 18%, #ececec 33%);
        background-size: 200% 100%;
        animation: 1.5s shine linear infinite;
    }

    .skeleton-body {
        height: 180px !important
    }

    .skeleton-filter {
        height: 20px !important
    }

    .pxp-header {
        border-bottom: 1px solid var(--pxpLightGrayColor);
    }

    .ren-content h1,
    .ren-content h2,
    .ren-content h3,
    .ren-content h4,
    .ren-content h5,
    .ren-content h6{
        margin-top  : 2rem;
    }

    .post-tag {
        padding: 4.8px 6px;
        background: rgb(225,236, 244);
        margin-left: 10px;
        cursor: pointer;
        border-radius: 10px;
    }

    .pxp-single-blog-share {
        margin-top: -10rem;
        margin-bottom: 2rem;
    }

    .pxp-single-blog-top-category {
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
    }
</style>

